{
    "name": "crowdfunding deployment test",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:owner": {
                    "nonce": "0",
                    "balance": "1,000,000"
                }
            },
            "newAddresses": [
                {
                    "creatorAddress": "address:owner",
                    "creatorNonce": "0",
                    "newAddress": "sc:crowdfunding"
                }
            ]
        },
        {
            "step": "scDeploy",
            "tx": {
                "from": "address:owner",
                "contractCode": "file:../output/crowdfunding.wasm",
                "value": "0",
                "arguments": [
                    "5"
                ],
                "gasLimit": "5,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scQuery",
            "txId": "2",
            "tx": {
                "to": "sc:crowdfunding",
                "function": "getSum",
                "arguments": []
            },
            "expect": {
                "out": [
                    "5"
                ],
                "status": "",
                "logs": []
            }
        },
        {
            "step": "scCall",
            "txId": "3",
            "tx": {
                "from": "address:owner",
                "to": "sc:crowdfunding",
                "function": "add",
                "arguments": [
                    "3"
                ],
                "gasLimit": "5,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "",
                "logs": [],
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "address:owner": {
                    "nonce": "*",
                    "balance": "*"
                },
                "sc:crowdfunding": {
                    "nonce": "*",
                    "balance": "*",
                    "storage": {
                        "''owner": "address:owner",
                        "str:sum": "8"
                    },
                    "code": "file:../output/crowdfunding.wasm"
                }
            }
        }
    ]
}